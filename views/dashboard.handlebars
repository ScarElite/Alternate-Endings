<div class="dashboard-pic fullheight ">
<div class="container mt-6">
<div class="columns">
<div class="columns is-centered is-vcentered py-6">
  <div class="col-12">
    <h1 class="title mb-4">Hello {{username}}</h1>
    <h2 class="title mb-4">Create a new post!</h2>
  </div>
</div>

</div>
<div class="box has-background-link-light">
  <form class="new-post-form">
    <div class="mb-3">
      <div class="field">
        <label for="post-title" class="label is-size-5">Title</label>
        <div class="control">
          <input
            type="text"
            name="post-title"
            class=" input is-info"
            id="post-title"
          />
        </div>
      </div>
    </div>
    <div class="mb-3">
      <div class="field">
        <label
          for="post-content"
          class="label is-size-5"
        >Content</label>
        <div class="control">
          <textarea
            type="text"
            name="post-content"
            class="form-control post-content mb-3 input is-info"
            id="post-content"
          ></textarea>
        </div>
        <div class="control">
          <button type="submit" class="button is-normal is-info">Save My Ending</button>
          </div>
      </div>
    </div>
  </form>
</div>

<div class="col-12 mb-4 message is-link">
  <h2 class="mb-4 is-size-3 message-header">Your Posts</h2>
</div>

{{#if posts.length}}
  <div class="row message-body has-background-link-light">
    <div class="col-12">
    <div class="list-group">
        {{#each posts as |post|}}
        {{>post-info post}}
        {{/each}}
    </div>
    </div>
  </div>
  {{else}}
  <div class="row">
    <div class="col-12">
    <p>You do not have any posts</p>
    </div>
  </div>
{{/if}}

</div>
</div>
<script src="/js/add-post.js"></script>